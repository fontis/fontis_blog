<customgrid>
    <grid_types>
        <fontis_blog_posts model="blog/customGrid_grid_type_posts" module="blog">
            <name>Blog Posts</name>
            <sort_order>70000</sort_order>
            <custom_columns>
                <categories model="blog/customGrid_custom_column_post_categories" module="blog">
                    <name>Categories</name>
                    <description>Displays for each post all the categories it's associated to</description>
                    <warning>Sorting is based on a csv string of category IDs</warning>
                    <allow_customization>1</allow_customization>
                </categories>
                <tags model="blog/customGrid_custom_column_post_tags" module="blog">
                    <name>Tags</name>
                    <description>Displays for each post all the tags it's associated to</description>
                    <warning>Sorting is based on a csv string of tag IDs</warning>
                    <allow_customization>1</allow_customization>
                </tags>
            </custom_columns>
        </fontis_blog_posts>
    </grid_types>
</customgrid>
